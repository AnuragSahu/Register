<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anurag.register.MessageToQuery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message to :"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvMTQSendingTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etMTQMobileNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter the Phone Number or Select it"
                android:layout_weight="9"/>

            <Button
                android:id="@+id/bMTQAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Add"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llMTQLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/etMTQMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="Type the message Here"
            android:lines="3"
            android:gravity="bottom"/>

        <Button
            android:id="@+id/bMTQSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="SEND"
            android:layout_margin="10dp"/>
    </LinearLayout>
</RelativeLayout>
